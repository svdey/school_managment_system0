<script>
  $(document).ready(function () {
    $("input, select").on("focus", function () {
      $(this)
        .parent()
        .find(".input-group-text")
        .css("border-color", "#80bdff");
    });
    $("input, select").on("blur", function () {
      $(this)
        .parent()
        .find(".input-group-text")
        .css("border-color", "#ced4da");
    });

    $(document).on("click", "#signin", function () {
      var email = $("#email").val();
      var password = $("#your_pass").val();
      var data = {
        email: email,
        password: password,
      };
      $.ajax({
        url: "/login-data",
        type: "POST",
        data: data,
        success: function (res) {
          if (res.success) {
            alert(res.success);
            window.location.href =
              window.location.pathname.split("/")[0] + "adminDashboard";
          } else if (res.error) {
            alert(res.error);
            window.location.reload();
          }
        },
      });
    });
  });
</script>